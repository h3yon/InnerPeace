
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleMarginStart="40dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="My Page"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
    </androidx.appcompat.widget.Toolbar>


        <fragment
        android:id="@+id/logo_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"


        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"

        android:layout_below="@+id/my_toolbar" />





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            tools:context=".MyPage">

            <Space
                android:id="@+id/space_mypage"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <Button
                android:id="@+id/btn_login_view"
                android:layout_below="@+id/space_mypage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#fffff"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#000000"
                android:text="login"
                />

            <View
                android:layout_below="@+id/btn_login_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="200dp"
                android:layout_centerInParent="true"
                android:background="#777575"/>




            <Button
                android:id="@+id/btn_help"
                android:layout_below="@+id/btn_login_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#fffff"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#000000"
                android:text="Help"
                />


            <View
                android:layout_below="@+id/btn_help"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="200dp"
                android:layout_centerInParent="true"
                android:background="#777575"/>


            <Button
                android:id="@+id/btn_dev"
                android:layout_below="@+id/btn_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#fffff"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#000000"
                android:text="Developer"
                />
            <View
                android:layout_below="@+id/btn_dev"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="200dp"
                android:layout_centerInParent="true"
                android:background="#777575"/>



