<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EAEAEA</item>
        <item name="colorPrimaryDark">#BCBCBC</item>
        <item name="colorAccent">#CDCDCD</item>
        <item name="titleTextColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:actionButtonStyle">@style/ToolbarButtonStyle</item>

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="titleTextColor">#000000</item>
    </style>

    <style name="ToolbarButtonStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:minWidth">70dip</item>
<!--        <item name="android:minHeight">70dip</item>-->
    </style>
    
    <!-- Search_view를 위해 추가한 코드. 문제가 있는 듯 하여 사용하진 않았는데 향후 사용할 수도 있을 것 같아 남김 -->
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="DefaultAppTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
